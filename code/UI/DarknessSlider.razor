@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@namespace CryptidHunt

<root>
    <div class="instructions"></div>
    <div class="tests">
        <div class="imageTest" style="opacity: @(80f/255f); background-color: rgb(22,22,22)"></div>
        <div class="imageTest" style="opacity: @(150f/255f); background-color: rgb(90,90,90)"></div>
        <div class="imageTest" style="opacity: @(220f/255f); background-color: rgb(140,140,140)"></div>
    </div>
    <div class="cover" style="opacity: @(0.9f - ( Opacity * 0.6f ))"></div>
    <div class="instructionsText">Drag the slider until the square on the left is barely visible</div>
    <div class="sliderContainer">
        <Slider></Slider>
        <button class="okay" onclick=@Okay>CONFIRM</button>
    </div>
</root>

@code
{
    [Property]
    public ComputerScreen Screen { get; set; }
    public static DarknessSlider Instance { get; private set; }
    public static float Opacity { get; set; } = 0.5f;

    protected override void OnStart()
    {
        base.OnStart();
        Instance = this;
        Screen.Enabled = false;
    }

    public void Okay()
    {
        Enabled = false;
        Screen.Enabled = true;

        foreach ( var color in Scene.Components.GetAll<ColorAdjustments>( FindMode.EverythingInSelfAndDescendants) )
            color.Brightness = MathX.Remap(Opacity, 0f, 1f, 0.1f, 2f);
    }

    /// <summary>
    /// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
    /// </summary>
    protected override int BuildHash() => System.HashCode.Combine( Time.Now );
}
