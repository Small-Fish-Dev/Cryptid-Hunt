@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@namespace CryptidHunt

<root>
    <div class="container">
        <div class="title">BACKPACK</div>
        <div class="weightBarContainer">
            <div class="weightbar"><div class="inner" style="width: 50%"></div></div>
        </div>
        <div class="weightContainer">
            <div class="weight">10.3 / 20.0 KG</div>
        </div>
        <div class="itemContainer">
            <div class="slotContainer">
                @for (int i = 0; i < 16; i++)
                {
                    <div class="slot">
                        <div class="weight">
                            <div class="icon"></div>
                            <div class="text">2.2 KG</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</root>

@code
{
    public static Inventory Instance { get; private set; }
    public bool Show { get; private set; } = true;

    protected override void OnStart()
    {
        base.OnStart();
        Instance = this;
    }

    protected override void OnUpdate()
    {
        Show = !Player.Instance.LockInputs && Input.Down( "Inventory" );

        Panel.Style.Opacity = Show ? 1f : 0f;

        //if (selected == null || selected.Container != pawn.Inventory)
        //    selected = null;
    }

    protected override int BuildHash() => System.HashCode.Combine( Time.Now );
}
